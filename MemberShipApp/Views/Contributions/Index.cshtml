@model IEnumerable<MemberShipApp.Models.Contribution>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContributionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContributionMethod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContributionMethod.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContributionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContributionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContributionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
